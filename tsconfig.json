{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@types/*": [
        "./src/plugin/types/*"
      ],
      "@components/*": [
        "./src/plugin/components/*"
      ],
      "@composables/*": [
        "./src/plugin/composables/*"
      ],
      "@stores/*": [
        "./src/plugin/stores/*"
      ],
      "@utils/*": [
        "./src/plugin/utils/*"
      ],
    },

    /* Declaration files */
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "types": ["node", "vite/client"]
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "tests/**/*"
  ]
}
